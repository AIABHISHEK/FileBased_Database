<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/add-product.css">

<%- include('../includes/navigation.ejs') %>

<main>
    <form action="<% if(editMode) { %> /admin/edit-product <% } else { %> /admin/products <%} %>" method="post" class="form">
        <label for="title">Title</label>
        <input type="text" id="title" name="title"
            value="<% if(editMode) { %>  <%=product.title %> <% } else {%><%} %>" />
        <label for="price">Price</label>
        <input type="number" id="price" name="price"
            value="<% if(editMode) { %><%=product.price %><% } else { %> <% } %>" step="0.001" />

        <!-- step="0.001"  to support decimal number -->

        <label for="imageUrl">Image Url</label>
        <input type="text" id="imageUrl" name="imageUrl"
            value="<%if(editMode){%><%=product.imageUrl%><% } else { %> <% } %>" />

        <% if(editMode) {%>
        <input type="hidden" name="id" value="<%=product.id%>">
        <% } %>

        <label for="description">Description</label>
        <!-- <input type="text" id="description" name="description" value="" /> -->

        <% if(editMode) {%>
        <textarea rows="5" cols="40" id="description" name="description"><%=product.description%>
                    </textarea>

        <%} else { %>
        <textarea rows="5" cols="40" id="description" name="description">
                    </textarea>
        <% } %>

        <button type="submit">
            <% if(editMode) { %> Update Product <% } else { %>Add Product <%} %>
        </button>
    </form>
</main>

<%- include('../includes/foot.ejs') %>